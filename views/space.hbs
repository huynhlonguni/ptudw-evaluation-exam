<div class="grid grid-cols-2 gap-4 mx-2">
	{{#each spaces}}
	<div class="bg-white shadow-lg rounded-lg py-4 px-6 w-full flex flex-col gap-3">
		<div>
			<div class="font-bold">
				#
			</div>
			<div>
				{{id}}
			</div>
		</div>
		
		<div>
			<div class="font-bold">
				Address
			</div>
			<div>
				{{address}}
			</div>
		</div>

		<div>
			<div class="font-bold">
				Type
			</div>
			<div>
				{{type}}
			</div>
		</div>

		<div>
			<div class="font-bold">
				Format
			</div>
			<div>
				{{format}}
			</div>
		</div>

		<div>
			<div class="font-bold">
				Ward
			</div>
			<div>
				{{ward}}
			</div>
		</div>

		<a href="/surface?id={{id}}" class="w-full text-center text-white px-3 lg:px-5 py-2 rounded-full bg-slate-600">
